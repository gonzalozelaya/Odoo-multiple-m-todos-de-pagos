<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Definición de las vistas -->
    <record id="view_account_payment_multiplemethods_tree" model="ir.ui.view">
        <field name="name">account.payment.multiplemethods.tree</field>
        <field name="model">account.payment.multiplemethods</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="partner_type"/>
                <!-- Otros campos que quieras mostrar en la vista tipo tree -->
            </tree>
        </field>
    </record>

    <record id="view_account_payment_multiplemethods_form" model="ir.ui.view">
        <field name="name">account.payment.multiplemethods.form</field>
        <field name="model">account.payment.multiplemethods</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="ConfirmDebts" type="object" string="Pagar deudas" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="debts,payments,draft,posted,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="partner_type"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Debts">
                            <field name="to_pay_move_line_ids" domain="[('account_id.reconcile', '=', True),('partner_id', '=', partner_id),('reconciled', '=', False), ('full_reconcile_id', '=', False), ('company_id', '=', company_id), ('move_id.state', '=', 'posted'), ('account_id.account_type', '=', 'asset_receivable' if partner_type == 'customer' else 'liability_payable')]" help="Payment will be automatically matched with the oldest lines of this list (by maturity date). You can remove any line you dont want to be matched."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
     <!-- Definición de la acción de ventana -->
    <record id="action_payment_multiple_methods" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="res_model">account.payment.multiplemethods</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_payment_multiplemethods_tree"/>
    </record>
    
    <!-- Definición del menú -->
    <menuitem id="payment_multiple_methods" 
              name="Payment Methods" 
              parent="account.menu_action_account_payments_payable" 
              action="action_payment_multiple_methods"/>
</odoo>